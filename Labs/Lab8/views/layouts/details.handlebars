<head>
    <meta charset="utf-8">
    <title>Person Found</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
  {{#if firstName}}
	<h1>Person Found</h1>
	<h2>{{firstName}} {{lastName}}</h2>
	<main>
		<dl>
		  <dt>ID</dt>
		  <dd>{{id}}</dd>
		  <dt>First Name</dt>
		  <dd>{{firstName}}</dd>
		  <dt>Last Name</dt>
		  <dd>{{lastName}}</dd>
		  <dt>Address</dt>
		  <dd>{{address}}</dd>
		  <dt>Zip Code</dt>
		  <dd>{{zip}}</dd>
		  <dt>Phone</dt>
		  <dd>{{phone}}</dd>
		  <dt>Social Security Number</dt>
		  <dd>{{ssn}}</dd>
		</dl>
    {{else}}
    <p class="error">
      The ID given clearly was not found within people you werido, please put in a another from 1-500.
    </p>
    {{/if}}
	</main>
</body>
